<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="316dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginLeft="20dp"
    android:background="#A2D9ED"
    app:cardElevation="15dp">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#E0E4F8">


        <TextView

            android:id="@+id/clickId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"


            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="0dp"
            android:background="#5FCEF3"
            android:text=" - Guide Details -"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/guidesCatagory"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clickId"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="21dp"
            android:text="Guide's Details"

            android:textColor="@android:color/holo_blue_dark"

            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView

            android:id="@+id/myguide_image"
            android:layout_width="129dp"
            android:layout_height="118dp"
            android:layout_below="@+id/guidesCatagory"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"


            android:layout_marginEnd="98dp"
            android:scaleType="centerCrop" />

        <TextView

            android:id="@+id/guideName"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myguide_image"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"

            android:layout_marginEnd="21dp"
            android:text="Guide Name"
            android:textColor="@android:color/black"

            android:textColorHighlight="@android:color/darker_gray"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/guideConNumber"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guideName"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"

            android:layout_marginEnd="20dp"
            android:text="Guide contact number"
            android:textColor="@android:color/black"

            android:textColorHighlight="@android:color/darker_gray"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/guideAge"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guideConNumber"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"

            android:layout_marginEnd="18dp"
            android:text="Guide's Age"
            android:textColor="@android:color/black"

            android:textColorHighlight="@android:color/darker_gray"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/guideExperiance"
            android:layout_width="282dp"
            android:layout_height="33dp"
            android:layout_below="@+id/guideAge"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"

            android:layout_marginEnd="5dp"
            android:text="Guide's Experiance"
            android:textColor="@android:color/black"

            android:textColorHighlight="@android:color/darker_gray"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/guideAmount"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guideExperiance"
            android:layout_alignParentStart="true"
            android:layout_marginStart="29dp"

            android:layout_marginTop="2dp"

            android:text="Amount per-day"

            android:textColor="@android:color/holo_red_dark"
            android:textSize="13dp"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>