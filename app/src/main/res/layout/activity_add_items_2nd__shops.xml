<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItems_2nd_Shops">

    <TextView
        android:id="@+id/slogn_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Category"
        android:textAlignment="center"
        android:textColor="?attr/colorPrimaryDark"
        android:textSize="26dp"

        android:textStyle="bold|italic" />

    <LinearLayout
        android:id="@+id/linear_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogn_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        />


    <ImageView
        android:id="@+id/T_shirt"
        android:layout_width="162dp"
        android:layout_height="113dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="62dp"
        android:src="@drawable/t2" />

    <ImageView
        android:id="@+id/keytag"
        android:layout_width="wrap_content"
        android:layout_height="111dp"
        android:layout_below="@+id/T_shirt"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="226dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="33dp"
        android:src="@drawable/k3" />

    <ImageView
        android:id="@+id/mug"
        android:layout_width="161dp"
        android:layout_height="114dp"
        android:layout_below="@+id/T_shirt"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="249dp"
        android:src="@drawable/m5" />

    <ImageView
        android:id="@+id/bag"
        android:layout_width="154dp"
        android:layout_height="104dp"
        android:layout_below="@+id/mug"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="227dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/b2" />

    <ImageView
        android:id="@+id/cap"
        android:layout_width="184dp"
        android:layout_height="125dp"
        android:layout_below="@+id/mug"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="210dp"
        android:layout_marginTop="302dp"
        android:layout_marginEnd="17dp"
        android:src="@drawable/c1" />

    <ImageView
        android:id="@+id/bottle"
        android:layout_width="161dp"
        android:layout_height="150dp"
        android:layout_below="@+id/cap"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="297dp"
        android:layout_marginEnd="250dp"
        android:src="@drawable/bb1" />

    <Button
        android:id="@+id/item_view"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cap"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/buttons"
        android:gravity="center"
        android:padding="17dp"
        android:text="View Items"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>