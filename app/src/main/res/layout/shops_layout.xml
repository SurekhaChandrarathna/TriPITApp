<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="316dp"
    android:layout_height="285dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginLeft="20dp"
    android:background="#A2D9ED"
    app:cardElevation="15dp">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:background="#E0E4F8">

        <TextView
            android:id="@+id/item_nam_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Item Catagory"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15dp"
            android:textStyle="bold"

            />




        <ImageView
            android:id="@+id/my_shop_image"
            android:layout_width="129dp"
            android:layout_height="118dp"
            android:layout_below="@+id/item_nam_shop"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="98dp"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/Item_number_shop"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_shop_image"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="21dp"
            android:text="Item Number"
            android:textColor="@android:color/black"
            android:textColorHighlight="@android:color/darker_gray"
            android:textSize="13dp"
            android:textStyle="bold" />


        <TextView

            android:id="@+id/Item_price_shop"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Item_number_shop"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="20dp"
            android:text="Price"
            android:textColor="@android:color/black"
            android:textColorHighlight="@android:color/darker_gray"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Item_Description_shop"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Item_price_shop"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="18dp"
            android:text="Item Description "
            android:textColor="@android:color/black"
            android:textColorHighlight="@android:color/darker_gray"
            android:textSize="13dp"
            android:textStyle="bold" />





    </RelativeLayout>


</androidx.cardview.widget.CardView>